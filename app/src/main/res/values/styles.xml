<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#34A2DA</item>
        <item name="colorPrimaryDark">#1785C6</item>
    </style>
    <style name="popup_in_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_down_in</item>
        <item name="android:windowExitAnimation">@anim/anim_down_out</item>
    </style>
    <style name="popup_show_out" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_show_in</item>
        <item name="android:windowExitAnimation">@anim/anim_show_out</item>
    </style>
</resources>
